<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_login_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#314362">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/timecapsule_logo5" />
    </RelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_signin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_login_signin"
            android:layout_height="45dp"
            android:background="#F2F9FD"
            android:clickable="true"
            android:src="@drawable/signin"
            app:layout_widthPercent="50%" />

        <ImageView
            android:id="@+id/tv_login_signup"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/tv_login_signin"
            android:background="#F2F9FD"
            android:clickable="true"
            android:src="@drawable/signup"
            app:layout_widthPercent="50%" />


    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_login_credentials"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_login_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="24dp"
            android:src="@drawable/ic_email_black_24dp" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_login_email"
            android:layout_alignTop="@id/iv_login_email"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_login_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="24dp"
            android:textColor="#314362"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/et_login_email"
            android:layout_marginTop="51dp"
            android:paddingLeft="24dp"
            android:src="@drawable/ic_lock_black_24dp" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_login_email"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="51dp"
            android:layout_toRightOf="@id/iv_login_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="24dp"
            android:textColor="#314362"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_signin_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#4e8dd0"
            android:src="@drawable/timecapsule_signin_bottom"
            app:layout_heightPercent="20%" />

    </android.support.percent.PercentRelativeLayout>


</LinearLayout>