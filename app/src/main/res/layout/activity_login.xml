<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#342e3d"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_login_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/gif_time_capsule" />
    </RelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_signin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_login_signin"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/signin9"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%" />

        <ImageView
            android:id="@+id/iv_login_signup"
            android:layout_toRightOf="@id/iv_login_signin"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/signup9_uc"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%" />

    </android.support.percent.PercentRelativeLayout>


    <FrameLayout
        android:id="@+id/container_credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</LinearLayout>