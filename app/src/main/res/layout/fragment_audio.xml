<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66FF66"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.hakeemsackes_bramble.timecapsule.audioactivity.AudioFragment">

    <ImageView
        android:id="@+id/iv_audio_cassette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="51dp"
        android:src="@drawable/cassette_icon" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_audio_cassette"
        android:layout_marginBottom="21dp" />

    <ImageView
        android:id="@+id/iv_audio_record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/progressBar"
        android:layout_marginBottom="21dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_fiber_manual_record_black_48dp"
        app:layout_widthPercent="50%" />

    <ImageView
        android:id="@+id/iv_audio_stop_record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/progressBar"
        android:layout_marginBottom="21dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_stop_black_48dp"
        app:layout_widthPercent="50%" />

    <ImageView
        android:id="@+id/iv_audio_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/iv_audio_record"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_play_arrow_black_48dp"
        app:layout_widthPercent="50%" />

    <ImageView
        android:id="@+id/iv_audio_stop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/iv_audio_stop_record"
        android:layout_toRightOf="@id/iv_audio_play"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_stop_black_48dp"
        app:layout_widthPercent="50%" />


</android.support.percent.PercentRelativeLayout>



