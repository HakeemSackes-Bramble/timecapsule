<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_add_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ADD MEDIA FRAGMENT"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_add_media"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/ic_photo_camera_black_48dp"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="33.33%" />

    <ImageView
        android:id="@+id/iv_audio"
        android:layout_alignBottom="@+id/iv_camera"
        android:layout_below="@+id/tv_add_media"
        android:layout_toEndOf="@+id/iv_camera"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/cassette_icon"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="33.33%" />

    <ImageView
        android:id="@+id/iv_videocam"
        android:layout_below="@id/tv_add_media"
        android:layout_toRightOf="@id/iv_audio"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/ic_videocam_black_48dp"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="33.33%" />


</android.support.percent.PercentRelativeLayout>